    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="../../assets/js/index.js"></script>
    <script src="../../assets/js/auth.js" type="module"></script>
</body>

</html>